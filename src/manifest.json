{
   "background": {
      "scripts": ["background.js"]
   },
   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Resurrect",
      "default_popup": "popup.html"
   },
   "description": "Resurrect the last closed tab.",
   "icons": {
      "32": "icon.png",
      "48": "icon48.png"
   },
   "manifest_version": 2,
   "name": "Resurrect",
   "permissions": ["tabs"],
   "update_url": "https://github.com/wummel/resurrect/raw/master/releases/updates.xml",
   "homepage_url": "https://github.com/wummel/resurrect/",
   "version": "0.1"
}
